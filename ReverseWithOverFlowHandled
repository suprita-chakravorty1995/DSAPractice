class Solution {
    public int reverse(int x) 
    {
        int temp = x;
        int rev = 0;
        int prevRev = 0;
        while(temp != 0)
        {
            int r = temp %10;
            rev = (rev * 10) + r;
            if((rev-r)/10 != prevRev)
            {
                return 0;
            }
            prevRev = rev;
            temp = temp/10;
        }
        return rev;
    }
}
